<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_8_x_1"
    android:background="@drawable/clickable_bg"
    android:elevation="8dp">

    <ImageView
        android:id="@+id/ivIcon"
        android:layout_width="@dimen/dp_8_x_8"
        android:layout_height="@dimen/dp_8_x_8"
        android:layout_margin="@dimen/dp_8_x_2"
        android:src="@drawable/brand_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tvServiceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8_x_1"
        android:layout_marginBottom="@dimen/dp_8_x_2"
        android:gravity="center"
        android:paddingHorizontal="@dimen/dp_4_x_1"
        android:textColor="@color/black"
        android:textSize="@dimen/mini_text"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/ivIcon"
        app:layout_constraintStart_toStartOf="@id/ivIcon"
        app:layout_constraintTop_toBottomOf="@id/ivIcon"
        tools:text="Service Name" />
</androidx.constraintlayout.widget.ConstraintLayout>