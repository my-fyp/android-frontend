<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    app:cardElevation="@dimen/dp_8_x_1">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/IvTittle"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:src="@drawable/homecleaner"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/tvImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cleaner"
            android:layout_toRightOf="@+id/IvTittle"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:fontFamily="@font/carme"/>

        <RatingBar
            android:id="@+id/Rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_below="@+id/tvImage"
            android:layout_toRightOf="@+id/IvTittle"
            android:layout_marginLeft="10dp"
            android:rating="4"/>
        <TextView
            android:id="@+id/TvImageDes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Providing different types of cleaning services"
            android:layout_below="@id/Rating"
            android:layout_toRightOf="@id/IvTittle"
            android:padding="10dp"/>



    </RelativeLayout>

</androidx.cardview.widget.CardView>